generator client {
  provider   = "prisma-client"
  output     = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  user_id    Int      @id @default(autoincrement())
  user_login      String  @unique
  user_password   String
  admin_role Boolean
  SMM_role Boolean
  designer_role Boolean
  videomaker_role Boolean
  coordinator_role Boolean
  
  posts      Post[]
}

model Post {
  post_id            Int      @id @default(autoincrement())
  post_title         String
  post_description   String?
  
  post_needs_video_smm        Boolean
  post_needs_video_maker      Boolean
  post_needs_text             Boolean
  post_needs_photogallery     Boolean
  post_needs_cover_photo      Boolean
  post_needs_photo_cards      Boolean
  
  post_done_link_video_smm      String?
  post_done_link_video_maker    String?
  post_done_link_text           String?
  post_done_link_photogallery   String?
  post_done_link_cover_photo    String?
  post_done_link_photo_cards    String?
  
  responsible_person_id   Int?
  user                    User?     @relation(fields: [responsible_person_id], references: [user_id])
  post_date          DateTime? @default(now())
  post_deadline      DateTime
  post_type          String
  post_status        String?   @default("В работе")
}
